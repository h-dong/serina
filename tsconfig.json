{
    "version": "2.5.0",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "diagnostics": true,
        "target": "ES5",
        "downlevelIteration": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "noLib": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": "./src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "jest",
            "luxon"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts"
    ]
}
